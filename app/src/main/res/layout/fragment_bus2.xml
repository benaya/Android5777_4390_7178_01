<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.BusFragment">

    <SearchView android:id="@+id/search_view1" android:layout_width="match_parent" android:layout_height="wrap_content"
        android:background="@drawable/search_view_border" android:iconifiedByDefault="false" android:padding="2dp" android:queryHint="Search...." />

    <ListView android:id="@+id/viewList" android:layout_width="fill_parent" android:layout_height="match_parent"
        android:layout_below="@+id/search_view1" />

</RelativeLayout>
